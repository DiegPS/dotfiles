{
  "explorer.fileNesting.enabled": true,
  "editor.minimap.enabled": false, // desactivar minimapa
  "editor.renderWhitespace": "all", // mostrar espacios en blanco
  "editor.wordWrap": "on", // ajustar texto
  "editor.tabSize": 2, // tamaño de tabulación
  "terminal.integrated.fontSize": 16, // Tamaño de fuente de terminal
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font", // Familia de la fuente
  "editor.fontLigatures": true, // ligaduras
  "editor.cursorStyle": "block", // Estilo del cursor: línea delgada
  "editor.cursorBlinking": "blink", // Animación del cursor
  "editor.lineHeight": 1.8, // Altura de línea
  "files.trimFinalNewlines": true, // quitar nuevas lineas
  "editor.suggestSelection": "first", // seleccionar primera sugerencia
  "breadcrumbs.enabled": false, // Deshabilita las rutas de navegación
  "javascript.validate.enable": true, // Deshabilita la validación de JS
  "workbench.startupEditor": "none", // Deshabilita el editor de inicio
  "workbench.activityBar.visible": false, // Deshabilita la barra de actividades
  "window.menuBarVisibility": "toggle", // Deshabilita la barra de menú
  "editor.glyphMargin": false, // Deshabilita los símbolos de la línea de código (Glyph Margin)
  "editor.inlineSuggest.enabled": true, // habilita sugerencias
  "editor.bracketPairColorization.enabled": true, // habilita coloreado de paréntesis
  "editor.guides.bracketPairs": true, // habilita guías de paréntesis
  "editor.guides.bracketPairsHorizontal": true, // habilita guías de paréntesis horizontal
  "editor.guides.highlightActiveBracketPair": true,
  "explorer.sortOrder": "type", // ordena el explorer por type
  "editor.formatOnPaste": true, // Formatea el código al pegarlo
  "editor.formatOnType": true, // Formatea una línea después de escribirla
  "editor.formatOnSave": true, // Formatea el código al guardar
  "editor.linkedEditing": true, // habilita edición enlazada
  "workbench.editor.tabCloseButton": "off", // Remueve el icono para cerrar pestañas
  "files.trimTrailingWhitespace": true, // Remueve los espacios en blanco al final de una línea
  "timeline.excludeSources": [], // Excluye los archivos de la línea de tiempo
  "files.exclude": { // archivos excluidos
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".vscode": true,
    "node_modules": true,
    "package-lock.json": true,
    "yarn.lock": true
  },
  "search.exclude": { // archivos excluidos de la busqueda
    ".git": true,
    ".vscode": true,
    ".yarn": true,
    "build": true,
    "dist": true,
    "node_modules": true,
    "types": true,
    ".pnp.cjs": true,
    ".pnp.js": true,
    ".pnp.mjs": true,
    "package-lock.json": true,
    "yarn.lock": true
  }, // Deshabilita la barra de estado
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.wrapTabs": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "workbench.editor.enablePreview": false,
  "extensions.ignoreRecommendations": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font'", // Fuente de la línea de código
  "editor.fontSize": 16, // tamaño de fuente del editor
  "telemetry.telemetryLevel": "off",
  "settingsSync.keybindingsPerPlatform": false,
  "editor.suggest.showSnippets": false, // ver snippets eliminado
  "editor.snippetSuggestions": "none", // eliminar sugerencia de snippets
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "editor.suggest.preview": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "diffEditor.codeLens": true,
  "editor.codeLensFontSize": 16,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact" // usar emmet dentro de JSX
  },
  "window.zoomLevel": 1,
  "workbench.statusBar.visible": false,
  "workbench.colorCustomizations": {
    "editorGroup.dropBackground": "#3700ff38", // Color de fondo de la pestaña
    "editor.background": "#121318",
    "input.background": "#0B0D13", // Color de fondo del editor
    "list.hoverBackground": "#4400ff83", // Color de fondo del editor al pasar el cursor por encima
    "badge.background": "#0B0D13", // Color de fondo de los badges de la barra de estado
    "panel.background": "#0B0D13", // Color de fondo de los paneles
    "menu.background": "#10121A", // Color de fondo del menú
    "sideBar.background": "#10121A", // Color de fondo de la barra lateral
    "button.background": "#6200ff", // Color de fondo de los botones
    "input.border": "#6200ff", // Color del borde de los inputs
    "checkbox.border": "#6200ff", // Color del borde de los checkbox
    "list.inactiveSelectionBackground": "#36007e56",
    "list.activeSelectionBackground": "#6200ff", // Color de fondo de la selección activa
    "editorWidget.background": "#0f111a", // Color de fondo de los widgets de editor
    "icon.foreground": "#ffffff", // Color del texto de los iconos
    "focusBorder": "#6200ff", // Color del borde de los inputs
    "dropdown.border": "#6200ff", // Color del borde de los dropdown
    "tab.inactiveBackground": "#10121A", // Color de fondo de las pestañas inactivas
    "tab.activeBorderTop": "#6200ff", // Color de borde superior de la pestaña activa
    "editorGroupHeader.tabsBackground": "#10121A", // Color de fondo de las pestañas de grupo de editor
    "editor.lineHighlightBackground": "#2903811e", // Color de resaltado de línea
    "editor.selectionBackground": "#6200ff2a", // Color de resaltado de selección
    "dropdown.background": "#0B0D13", // menu hacia abajo en el fondo
    "editorLineNumber.foreground": "#291a53",
    "editorLineNumber.activeForeground": "#6200ff",
    "activityBar.background": "#181A26",
    "statusBar.background": "#6200ff",
    "statusBar.noFolderBackground": "#6200ff"
  },
  "editor.tokenColorCustomizations": {
    "comments": "#8f6ded", // color de los comentarios dentro del editor
    "textMateRules": [
      {
        "name": "italic font",
        "scope": [
          "comment",
          "keyword",
          "storage",
          "keyword.control",
          "keyword.control.from",
          "keyword.control.flow",
          "keyword.operator.new",
          "keyword.control.import",
          "keyword.control.export",
          "keyword.control.default",
          "keyword.control.trycatch",
          "keyword.control.conditional",
          "storage.type",
          "storage.type.class",
          "storage.modifier.tsx",
          "storage.type.function",
          "storage.modifier.async",
          "variable.language",
          "variable.language.this",
          "variable.language.super",
          "meta.class",
          "meta.var.expr",
          "constant.language.null",
          "support.type.primitive",
          "entity.name.method.js",
          "entity.other.attribute-name",
          "punctuation.definition.comment",
          "text.html.basic entity.other.attribute-name",
          "tag.decorator.js entity.name.tag.js",
          "tag.decorator.js punctuation.definition.tag.js",
          "source.js constant.other.object.key.js string.unquoted.label.js",
        ],
        "settings": {
          "fontStyle": "italic",
        }
      },
    ]
  },
  "typescript.format.insertSpaceAfterConstructor": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all"
}
